{
  "compilerOptions": {
    "rootDir": "./src/",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "noImplicitThis": false,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "declaration": true,
    "declarationDir": "./dist/types"
  },
  "include": ["./src/*"]
}
